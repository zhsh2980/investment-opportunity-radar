RADAR_ADMIN_PASSWORD=your_admin_password

# ===== 服务器部署 =====
PROD_SSH_HOST=ubuntu@your_server_ip
PROD_SSH_KEY=docs/key/ubuntu_beijing.pem
PROD_APP_DIR=/srv/radar/app
